<div class="form-group">
	<label class="control-label">Invoice Name</label>
	<%= f.text_field :name, class: "form-control" %>
	<% if invoice.errors[:name].present? %>
    	<div class="error-message"><%=  invoice.errors[:name][0]%></div>
   	<% end %>
</div>
<div class="form-group">
	 <label class="control-label">Due Date</label>
	 <%= f.date_select :due_date, class: "form-control", prompt: true %>
	 <% if invoice.errors[:due_date].present? %>
    	<div class="error-message"><%=  invoice.errors[:due_date][0]%></div>
   	<% end %>
</div>
<div class="form-group">
	 <label class="control-label">Invoice Date</label>
