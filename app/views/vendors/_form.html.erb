<div class="form-group">
	<label class="control-label">Vendor Name</label>
	<%= f.text_field :name, class: "form-control" %>
	<% if vendor.errors[:name].present? %>
    	<div class="error-message"><%=  vendor.errors[:name][0]%></div>
   	<% end %>
</div>
