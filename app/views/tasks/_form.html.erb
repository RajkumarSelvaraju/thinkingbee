<div class="form-group">
	<label class="control-label">Task Name</label>
	<%= f.text_field :name, class: "form-control" %>
	<% if task.errors[:name].present? %>
    	<div class="error-message"><%=  task.errors[:name][0]%></div>
   	<% end %>
</div>
<div class="form-group">
	 <label class="control-label">Due Date</label>
	 <%= f.date_select :due_date, class: "form-control", prompt: true%>
	 <% if task.errors[:due_date].present? %>
    	<div class="error-message"><%=  task.errors[:due_date][0]%></div>
   	<% end %>
</div>
<div class="form-group">
	<label class="control-label">Owner</label>
	<%= f.collection_select :owner, User.all, :id, :email, {}, class: "form-control" %>
	<% if task.errors[:owner].present? %>
    	<div class="error-message"><%=  task.errors[:owner][0]%></div>
   	<% end %>
</div>
